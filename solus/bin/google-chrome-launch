#!/bin/bash

check_update () {
    if ! google-chrome-updater --check-only; then
        if zenity --question --text="An update is available. Would you like to install it?"; then
            pkexec google-chrome-updater --target $TARGET
        fi
    fi
}

case $0 in
    unstable)
        TARGET="unstable"
        ;;
    dev)
        TARGET="dev"
        ;;
    *)
        TARGET="stable"
        ;;
esac

check_update
exec google-chrome-$TARGET "$@"

