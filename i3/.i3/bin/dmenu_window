#!/bin/bash
re='^\s*(0x[0-9a-f]+) "(.*)": \("(.*)" "(.*)"\)'
declare -A ids
i=0
windows=()
while read -r line; do
    if [[ $line =~ $re ]]; then
        id=${BASH_REMATCH[1]}
        title="${BASH_REMATCH[2]}"
        # Get WM hints
        hints=$(xwininfo -wm -id $id)
        # List only windows we can switch to
        if [[ "$hints" =~ 'Client accepts input or input focus: Yes' || "$hints" =~ 'Displayed on desktop' ]]; then
            let i++
            ids[$i]=$(printf %d $id) # hex2dec
            windows+=("$i> $title")
        fi
    fi
done < <(xwininfo -tree -root)
[[ $i -gt 10 ]] && i=10
[[ ${#windows[@]} -gt 0 ]] || exit 0
window=$(printf '%s\n' "${windows[@]}" | dmenu -l $i ${1+"$@"}) || exit 1
i=${window%%>*}
id=${ids[$i]}
xdotool windowactivate $id

