#!/bin/bash
shopt -s extglob
browser="$1"
searcher="$2"
shift 2
if [[ $1 == "--clip" ]]; then
    target=$(xclip -o)    
else
    target=$(dmenu ${1+"$@"} </dev/null) || exit 1
fi

case "$target" in
    http?(s)://*|file://*|www.*|*.@(com|org|net|edu|io))
        $browser "$target" ;;
    *)
        $searcher "$target" ;;
esac

