#!/bin/bash
shopt -s extglob
browser="$1"
searcher="$2"
shift 2
if [[ $1 == "--clip" ]]; then
    target=$(xclip -o)    
else
    target=$(sort ${BOOKMARKS:-~/.bookmarks} 2>/dev/null | dmenu ${1+"$@"}) || exit 1
fi

case "$target" in
    http?(s)://*|file://*|www.*|*.@(com|org|net|edu|io))
        exec $browser "$target" ;;
    *)
        exec $searcher "$target" ;;
esac

